<?php
// config.php dahil et (PDO bağlantısı burada olsun)
include '../detay/config.php';

// Oturum kontrolü (gerekirse)
session_start();
if (!isset($_SESSION['admin_logged_in'])) {
    header('Location: login.php');
    exit;
}

// Blogları çek
$stmt = $pdo->query("SELECT * FROM haberler ORDER BY tarih DESC");
$haberler = $stmt->fetchAll(PDO::FETCH_ASSOC);
?>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Panel - Bloglar</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

<div class="container py-4">

    <h2 class="mb-4">Bloglar</h2>

    <!-- Başarı mesajı -->
    <?php if (isset($_GET['msg']) && $_GET['msg'] === 'success'): ?>
        <div class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1080; min-width: 300px;">
            <div class="alert alert-success alert-dismissible fade show shadow rounded text-center" role="alert">
                <strong>Başarılı!</strong> Kayıt başarıyla silindi.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    <?php endif; ?>

    <?php if (!$haberler): ?>
        <p>Henüz blog eklenmemiş.</p>
    <?php else: ?>
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>id</th>
                    <th>isim</th>
                    <th>kategori</th>
                    <th>rutbe</th>
                    <th>resim</th>
                    <th>baslik</th>
                    <th>tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($haberler as $haber): ?>
                    <tr>
                        <td><?= htmlspecialchars($haber['id']) ?></td>
                        <td><?= htmlspecialchars($haber['isim']) ?></td>
                        <td><?= htmlspecialchars($haber['kategori']) ?></td>
                        <td><?= htmlspecialchars($haber['rutbe']) ?></td>
                        <td>
                            <?php if (!empty($haber['resim'])): ?>
                                <img src="../resimler/<?= htmlspecialchars($haber['resim']) ?>" alt="Resim" style="max-width: 100px; height: auto;">
                            <?php else: ?>
                                Resim yok
                            <?php endif; ?>
                        </td>
                        <td><?= htmlspecialchars($haber['baslik']) ?></td>
                        <td><?= htmlspecialchars($haber['tarih']) ?></td>
                        <td>
                            <a href="duzenle.php?id=<?= urlencode($haber['id']) ?>" class="btn btn-sm btn-primary me-1" title="Düzenle">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <a href="sil.php?id=<?= urlencode($haber['id']) ?>" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    <?php endif; ?>

</div>

<!-- Bootstrap JS ve Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Otomatik kapanan alert -->
<script>
    window.addEventListener('DOMContentLoaded', () => {
        const alert = document.querySelector('.alert-dismissible');
        if (alert) {
            setTimeout(() => {
                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                bsAlert.close();
            }, 3000); // 3 saniye sonra kapanır
        }
    });
</script>

<!-- Bootstrap Icons CDN (opsiyonel, düzenle/sil ikonları için) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</body>
</html>
